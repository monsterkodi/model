
clr                  = {} 
clr.black            = #000000
clr.gray-pitch-dark  = #101010
clr.gray-most-dark   = #181818
clr.gray-super-dark  = #222222
clr.gray-very-dark   = #282828
clr.gray-dark        = #333333
clr.gray-medium      = #555555
clr.gray             = #888888
clr.gray-bright      = #cccccc
clr.gray-very-bright = #dddddd
clr.white            = #ffffff
clr.yellow-bright    = #ffff88
clr.yellow           = #ffff00
clr.orange-bright    = #ffaa00
clr.orange           = #ff8800
clr.red              = #ff0000
clr.green-bright     = #00ff00
clr.green            = #00aa00
clr.green-dark       = #006600
clr.blue-dark        = #2222aa
clr.blue             = #4444ff
clr.blue-medium      = #6666ff
clr.blue-bright      = #8888ff
clr.blue-very-bright = #aaaaff

clr.background       = clr.gray-most-dark

@font-face
    font-family UbuntuMono
    src url('./font/UbuntuMono-R.ttf')

body
    font-family         Verdana
    background-color:   clr.background
    color:              clr.white
    
::selection
    color:              clr.yellow

/*
*   0000000   0000000  00000000    0000000   000      000    
*  000       000       000   000  000   000  000      000    
*  0000000   000       0000000    000   000  000      000    
*       000  000       000   000  000   000  000      000    
*  0000000    0000000  000   000   0000000   0000000  0000000
*/

.scroll
    background-color:   clr.gray-dark
    
.scroll.flashy
    background-color:   clr.orange-bright


/*
*  000000000  00000000   00000000  00000000
*     000     000   000  000       000     
*     000     0000000    0000000   0000000 
*     000     000   000  000       000     
*     000     000   000  00000000  00000000
*/

.tree-item
    border-top:         1px solid clr.gray-super-dark
    border-bottom:      1px solid clr.gray-pitch-dark

.tree-item-idx
    color:              clr.gray-dark

.tree-item-spc
    color:              clr.gray-medium

.tree-item.selected
    background-color:   clr.gray-super-dark
    -webkit-box-shadow  none
    
.tree-item-key.array-index
    color:              clr.gray-medium
    
.tree-item-key
    color:              clr.gray

.tree-item-value.type-object
    color:              clr.gray-bright

.tree-item-vis
    color:              clr.gray-medium

.tree-item-chd
    color:              clr.gray-dark

.tree-item-dsc
    color:              clr.gray-very-dark
