*/

nodrag()
    -webkit-app-region  no-drag

treeItemHeight = 24px

body
    margin              0px
    -webkit-user-select none
    pointer-events      all
    font-size           14px
    overflow            hidden
    position            absolute
    top                 0
    bottom              0
    left                0
    right               0

input 
textarea
    outline             none
    
/*
*   0000000   0000000  00000000    0000000   000      000    
*  000       000       000   000  000   000  000      000    
*  0000000   000       0000000    000   000  000      000    
*       000  000       000   000  000   000  000      000    
*  0000000    0000000  000   000   0000000   0000000  0000000
*/

.scroll
    position            absolute
    width               6px
    height              20%
    top                 0px
    left                0px

/*
*  00000000    0000000   000000000  000   000
*  000   000  000   000     000     000   000
*  00000000   000000000     000     000000000
*  000        000   000     000     000   000
*  000        000   000     000     000   000
*/

#path
    height              treeItemHeight
    min-height          treeItemHeight
    width               100%

/*
*  000000000  00000000   00000000  00000000
*     000     000   000  000       000     
*     000     0000000    0000000   0000000 
*     000     000   000  000       000     
*     000     000   000  00000000  00000000
*/

#treeContainer
    overflow            hidden
    position            absolute
    width               100%
    top                 treeItemHeight
    bottom              0

#tree
    width               100%
    height              100%

.tree-item
    display             block
    box-sizing          border-box
    width               100%
    padding             0
    margin              0
    spacing             0
    height              treeItemHeight
    line-height         treeItemHeight
    overflow            hidden   
    -webkit-user-select none
    cursor              pointer
    white-space         nowrap
    outline             none

.tree-item > *
    display             inline-block
    white-space         nowrap  
    overflow            hidden   
    outline             none

.tree-item-idx
    text-align          right
    min-width           33px
    font-size           12px
    margin-left         8px

.tree-item-spc
    text-align          right

.tree-item-spc.collapsed::after
    content             '►'

.tree-item-spc.expanded::after
    content             '▽'
    
.tree-item-spc.collapsed::after
.tree-item-spc.expanded::after
    margin-right        6px

.tree-item-key
    min-width           200px
    margin-right        6px

.tree-item-key.type-array
    text-shadow         none

.tree-item-value
    min-width           200px
    white-space         nowrap

.tree-item-vis
.tree-item-dsc
.tree-item-chd
    text-align          right
    min-width           40px
    font-size           12px
    margin-right        4px
    float               right
    position            relative

.tree-item-dsc
    margin-right        16px
    
