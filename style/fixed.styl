*  000       000   000 000   000       000   000
*  000       000  000   000  00000000  0000000  
*/

nodrag()
    -webkit-app-region  no-drag

treeItemHeight = 24px

body
    margin              0px
    -webkit-user-select none
    pointer-events      all
    font-size           14px
    overflow            hidden

input 
textarea
    outline             none
    
#container
    position            absolute
    top                 0
    bottom              0
    left                0
    right               0
    
/*
*   0000000   0000000  00000000    0000000   000      000    
*  000       000       000   000  000   000  000      000    
*  0000000   000       0000000    000   000  000      000    
*       000  000       000   000  000   000  000      000    
*  0000000    0000000  000   000   0000000   0000000  0000000
*/

.scroll
    position            absolute
    width               6px
    height              20%
    top                 0px
    left                0px

/*
*  00000000    0000000   000000000  000   000
*  000   000  000   000     000     000   000
*  00000000   000000000     000     000000000
*  000        000   000     000     000   000
*  000        000   000     000     000   000
*/

#path
    display             block
    min-height          treeItemHeight
    top                 0px
    width               100%
    
.pathText
    vertical-align      top
    box-sizing          border-box
    height              treeItemHeight
    display             inline-block
    padding-top         3px
    padding-left        8px
    padding-right       4px

.pathArrow 
    display             inline-block
    width 0
    height 0
    border-top          (treeItemHeight / 2px) solid transparent
    border-bottom       (treeItemHeight / 2px) solid transparent
    border-left-width   (treeItemHeight / 2px)
    border-left-style   solid

/*
*  000000000  00000000   00000000  00000000
*     000     000   000  000       000     
*     000     0000000    0000000   0000000 
*     000     000   000  000       000     
*     000     000   000  00000000  00000000
*/

#treeScroll
    position            relative
    display             block
    width               100%
    overflow-y          hidden
    overflow-x          auto

#tree
    position            relative
    overflow            hidden
    width               100%
    padding             0
    display             table

.tree-col
    float               left
    overflow            hidden
    &.idx
        width           40px
        overflow        visible
    &.key
        overflow-x          auto
        overflow-y          hidden
        min-width           100px
        width           500px
    &.val
        overflow-x          auto
        overflow-y          hidden
        min-width           30px
        width               100px
    &.num
        width           120px
        float           right

.tree-line
    pointer-events      all
    position            absolute
    width               2000px
    left                0
    top                 0
    bottom              0
    cursor              pointer

.tree-item
    position            relative
    background-color    transparent
    display             block
    box-sizing          border-box
    margin              0
    spacing             0
    height              treeItemHeight
    line-height         treeItemHeight
    overflow            visible
    -webkit-user-select none
    pointer-events      none
    white-space         nowrap
    outline             none
    
.tree-value
    background-color    transparent
    display             inline-block
    white-space         nowrap  
    // overflow            hidden   
    outline             none

.tree-item.idx
    text-align          right
    min-width           33px
    font-size           12px
    margin-left         8px

.tree-value.spc
    text-align          right
    pointer-events      all

    &.collapsed::after
        content             '►'

    &.expanded::after
        content             '▽'
    
    &.collapsed::after
    &.expanded::after
        margin-right        6px

.tree-value.key
    // min-width           100px
    margin-right        6px

    &.type-array
        text-shadow         none

.tree-item.val
    min-width           100px
    white-space         nowrap

.tree-item.num
    .vis
    .dsc
    .chd
        text-align          right
        min-width           35x
        font-size           12px
        margin-right        4px
        float               right
        position            relative

    .dsc
        margin-right        16px
    
