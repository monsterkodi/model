/*
*  00000000  000  000   000  00000000  0000000  
*  000       000   000 000   000       000   000
*  000000    000    00000    0000000   000   000
*  000       000   000 000   000       000   000
*  000       000  000   000  00000000  0000000  
*/

treeItemHeight = 24px
idxColumnWidth = 50px
numColumnWidth = 100px

body
    margin              0px
    font-size           14px
    overflow            hidden

input 
textarea
    outline             none
    
.clear     
    clear               both
    
#container
    position            absolute
    top                 0
    bottom              0
    left                0
    right               0

/*
*  00000000  000  000   000  0000000  
*  000       000  0000  000  000   000
*  000000    000  000 0 000  000   000
*  000       000  000  0000  000   000
*  000       000  000   000  0000000  
*/

#find
    outline             none
    position            relative
    display             block
    height              treeItemHeight
    width               100%
    
    .key
        box-sizing      border-box
        position        absolute
        left            0
        top             0
        height          treeItemHeight
        display         inline-block
        width           50%
    .val
        box-sizing      border-box
        position        absolute
        right           0
        top             0
        height          treeItemHeight
        display         inline-block
        width           50%

.input
    font-family         Verdana, Arial, sans-serif
    font-size           16px
    padding-left        6px
    padding-right       6px
    width               100%
    box-sizing          border-box
    text-align          left
    height              treeItemHeight

/*
*  00000000    0000000   000000000  000   000
*  000   000  000   000     000     000   000
*  00000000   000000000     000     000000000
*  000        000   000     000     000   000
*  000        000   000     000     000   000
*/

#path
    display             block
    outline             none
    min-height          treeItemHeight
    padding             0
    margin              0
    top                 0
    width               100%
    overflow-x          auto
    white-space         nowrap
    
.pathText 
    vertical-align      top
    box-sizing          border-box
    height              treeItemHeight
    white-space         nowrap
    overflow            hidden
    display             inline-block
    padding-top         3px
    padding-left        8px
    padding-right       4px
    cursor              pointer

.pathArrow 
    display             inline-block
    width               0
    height              0
    border-top          (treeItemHeight / 2px) solid transparent
    border-bottom       (treeItemHeight / 2px) solid transparent
    border-left-width   (treeItemHeight / 2px)
    border-left-style   solid
    margin-bottom       -2px
    cursor              pointer

pathItemHeight = treeItemHeight - 2px

.tree-value.key
    .pathText
        font-size           12px
        margin-top 1px
        height              pathItemHeight
        line-height         pathItemHeight
        padding-top         0px
        padding-left        8px
        padding-right       4px

    .pathArrow 
        margin-top 1px
        border-top          (pathItemHeight / 2px) solid transparent
        border-bottom       (pathItemHeight / 2px) solid transparent
        border-left-width   (pathItemHeight / 2px)
        margin-bottom       -2px
    
/*
*   0000000  000  0000000  00000000  00000000 
*  000       000     000   000       000   000
*  0000000   000    000    0000000   0000000  
*       000  000   000     000       000   000
*  0000000   000  0000000  00000000  000   000
*/

.sizers
    display             block
    width               100%
    overflow            visible
    
.sizer
    position            absolute
    top                 0
    width               6px
    height              100%
    background-color    transparent
    cursor              col-resize

.vline
    pointer-events      none
    box-sizing          border-box
    position            relative
    top                 0
    align               center
    height              100%
        
/*
*   0000000   0000000  00000000    0000000   000      000    
*  000       000       000   000  000   000  000      000    
*  0000000   000       0000000    000   000  000      000    
*       000  000       000   000  000   000  000      000    
*  0000000    0000000  000   000   0000000   0000000  0000000
*/

.scrollbar
    position            absolute
    top                 0
    bottom              0
    cursor              ns-resize
    &.left
        left            0
        width           idxColumnWidth
    &.right
        right           0
        width           numColumnWidth

.scroll
    position            absolute
    width               6px
    height              20%
    top                 0
    &.left
        left            0
    &.right
        right           0

@import 'tree'
