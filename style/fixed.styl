nodrag()
    -webkit-app-region  no-drag

tree-item-height = 24px
arrow-width      = 4px

body
    margin              0px
    -webkit-user-select none
    pointer-events      all
    font-size           14px

input 
textarea
    outline             none
    
.no-pointer
    pointer-events      none

/*
*  000000000  00000000   00000000  00000000
*     000     000   000  000       000     
*     000     0000000    0000000   0000000 
*     000     000   000  000       000     
*     000     000   000  00000000  00000000
*/

#tree-scroll
    nodrag()
    overflow            auto
    top                 0
    left                0
    bottom              0
    right               0
    position            absolute
    width               100%
    height              100%
    scroll-behavior     smooth

#tree
    width               100%

.tree-item
    display             block
    width               100%
    position            absolute
    padding             0
    margin              0
    spacing             0
    height              tree-item-height
    line-height         tree-item-height
    overflow            hidden   
    -webkit-user-select none
    cursor              pointer
    white-space         nowrap
    outline             none
    box-sizing          border-box

.tree-item > *
    display             inline-block
    white-space         nowrap  
    overflow            hidden   
    outline             none

.tree-item-idx
    text-align          right
    min-width           33px
    font-size           12px
    margin-left         6px

.tree-item-spc
    text-align          right

.tree-item-spc.collapsed::after
    content             '►'
    margin-right        arrow-width

.tree-item-spc.expanded::after
    content             '▽'
    margin-right        arrow-width

.tree-item-key
    min-width           200px
    margin-right        6px

.tree-item-key.type-array
    text-shadow         none

.tree-item-value
    min-width           200px
    white-space         nowrap

.tree-item-vis
.tree-item-dsc
.tree-item-chd
    text-align          right
    min-width           40px
    font-size           12px
    margin-right         4px
    float right
    position relative

.tree-item-dsc
    margin-right         16px
    
